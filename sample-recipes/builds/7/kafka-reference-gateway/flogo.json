{
	"name": "kafka-reference-gateway-linux",
	"type": "flogo:app",
	"version": "1.0.0",
	"description": "This is the kafka based microgateway app",
	"properties": null,
	"triggers": [
		{
			"name": "kafka_trigger",
			"id": "kafka_trigger",
			"ref": "github.com/wnichols/kafkasub",
			"settings": {
				"BrokerUrl": "localhost:9092"
			},
			"outputs": null,
			"handlers": [
				{
					"actionId": "user_topic_handler",
					"settings": {
						"Topic": "users"
					},
					"outputs": null
				}
			],
			"endpoints": null
		}
	],
	"actions": [
		{
			"id": "user_topic_handler",
			"ref": "github.com/TIBCOSoftware/flogo-contrib/action/flow",
			"data": {
				"flow": {
					"type": 1,
					"attributes": [],
					"rootTask": {
						"id": 1,
						"type": 1,
						"tasks": [
							{
								"id": 2,
								"name": "Log Message",
								"description": "Simple Log Activity",
								"type": 1,
								"activityType": "tibco-log",
								"activityRef": "github.com/TIBCOSoftware/flogo-contrib/activity/log",
								"attributes": [
									{
										"name": "message",
										"value": "",
										"required": false,
										"type": "string"
									},
									{
										"name": "flowInfo",
										"value": "false",
										"required": false,
										"type": "boolean"
									},
									{
										"name": "addToFlow",
										"value": "false",
										"required": false,
										"type": "boolean"
									}
								],
								"inputMappings": [
									{
										"type": 1,
										"value": "{T.message}",
										"mapTo": "message"
									}
								]
							}
						],
						"links": [],
						"attributes": []
					}
				}
			}
		}
	]
}